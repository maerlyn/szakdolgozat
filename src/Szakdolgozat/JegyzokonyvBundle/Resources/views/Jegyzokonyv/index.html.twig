{% extends "::base.html.twig" %}

{% block body %}
<div class="page-header">
    <h1>Jegyzőkönyvek</h1>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Név</th>
            <th>Dátum</th>
            <th>Jegyzőkönyvíró</th>
            <td></td>
        </tr>
    </thead>
    <tbody>
    {% for j in jegyzokonyvek %}
        <tr>
            <td>{{ j.id }}</td>
            <td>{{ j.nev }}</td>
            <td>{{ j.datum|date("Y. m. d. H:i") }}</td>
            <td>{{ j.jegyzokonyviro.nev }}</td>
            <td></td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<a href="{{ path("szakdolgozat_jegyzokonyv_jegyzokonyv_new") }}" class="btn btn-primary">Új jegyzőkönyv</a>
{% endblock %}
