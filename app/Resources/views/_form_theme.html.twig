{% block choice_row %}
    <div class="control-group{% if form.vars.errors|length %} error{% endif %}">
        {{ form_label(form, null, { "label_attr": { "class": "control-label" }} ) }}
        <div class="controls">
            {% for child in form %}
                <label for="{{ child.vars.id }}"{% if child.vars.checked %} class="selected"{% endif %}>
                    {{ form_widget(child) }}
                    {{ child.vars.label }}
                </label>
            {% endfor %}

            {% if help is defined or form.vars.errors|length %}
            <span class="help-inline">
                {% if help is defined %}{{ help }}<br />{% endif %}
                {% for e in form.vars.errors %}{{ e.messageTemplate|trans(e.messageParameters, "validators") }}{% endfor %}
            </span>
            {% endif %}
        </div>
    </div>
{% endblock %}

{% block form_row %}
    <div class="control-group{% if form.vars.errors|length %} error{% endif %}">
        {{ form_label(form, null, { "label_attr": { "class": "control-label" }} ) }}
        <div class="controls">
            {{ form_widget(form) }}

            {% if help is defined or form.vars.errors|length %}
                <span class="help-inline">
                {% if help is defined %}{{ help }}<br />{% endif %}
                    {% for e in form.vars.errors %}{{ e.messageTemplate|trans(e.messageParameters, "validators") }}{% endfor %}
            </span>
            {% endif %}

        </div>
    </div>
{% endblock %}
