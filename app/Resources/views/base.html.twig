<!DOCTYPE html>
<html lang="hu">
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Jegyzőkönyvkészítő{% endblock %}</title>
        {% block stylesheets %}
        <link rel="stylesheet" type="text/css" href="{{ asset("/css/bootstrap.css") }}" />
        <link rel="stylesheet" type="text/css" href="{{ asset("/css/main.css") }}" />
        {% endblock %}
    </head>
    <body>
        <div class="navbar navbar-fixed-top navbar-inverse">
            <div class="navbar-inner">
                <div class="container">
                    <a class="brand" href="{{ path("szakdolgozat_szakdolgozat_homepage") }}">Jegyzőkönyvkészítő</a>

                    {% if is_granted("IS_AUTHENTICATED_OPENID") %}
                    <ul class="nav">
                        {% if is_granted("ROLE_ADMINISZTRATOR") %}
                        <li><a href="{{ path('szakdolgozat_felhasznalo_felhasznalo_index') }}">Felhasználók</a></li>
                        {% endif %}
                        <li><a href="{{ path("szakdolgozat_ules_ules_index") }}">Ülések</a></li>
                        <li><a href="{{ path("szakdolgozat_jegyzokonyv_jegyzokonyv_index") }}">Jegyzőkönyvek</a></li>
                    </ul>

                    <ul class="nav pull-right">
                        <li><a href="{{ path("fp_openid_security_logout") }}">Kijelentkezés</a></li>
                    </ul>
                    {% endif %}
                </div>
            </div>
        </div>

        <div class="container">
        {% block body %}{% endblock %}
        </div>
        {% block javascripts %}
        {#<script type="text/javascript" src="{{ asset("/js/bootstrap.js") }}"></script>#}
        {% endblock %}
    </body>
</html>
